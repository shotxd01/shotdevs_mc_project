<% if (typeof user !== 'undefined') { %>
<aside class="w-64 bg-white dark:bg-gray-800 border-r border-gray-200 dark:border-gray-700 flex flex-col hidden md:flex fixed h-full z-10">
    <div class="p-6 border-b border-gray-200 dark:border-gray-700 flex items-center gap-2">
        <span class="material-icons text-blue-500">smart_toy</span>
        <h1 class="text-xl font-bold">Bot Admin</h1>
    </div>
    <nav class="flex-1 p-4 space-y-2">
        <a href="/" class="flex items-center gap-3 px-4 py-3 rounded-lg <%= page === 'home' ? 'bg-blue-500 text-white shadow-lg shadow-blue-500/30' : 'text-gray-600 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700' %> transition-all">
            <span class="material-icons">dashboard</span>
            <span>Dashboard</span>
        </a>
        <a href="/server" class="flex items-center gap-3 px-4 py-3 rounded-lg <%= page === 'server' ? 'bg-blue-500 text-white shadow-lg shadow-blue-500/30' : 'text-gray-600 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700' %> transition-all">
            <span class="material-icons">dns</span>
            <span>Server</span>
        </a>
        <a href="/console" class="flex items-center gap-3 px-4 py-3 rounded-lg <%= page === 'console' ? 'bg-blue-500 text-white shadow-lg shadow-blue-500/30' : 'text-gray-600 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700' %> transition-all">
            <span class="material-icons">terminal</span>
            <span>Console</span>
        </a>
    </nav>
    <div class="p-4 border-t border-gray-200 dark:border-gray-700">
        <div class="flex items-center gap-3 px-4 py-2 mb-2">
            <div class="w-2 h-2 rounded-full <%= status && status.online ? 'bg-green-500' : 'bg-red-500' %>" id="sidebar-status-dot"></div>
            <span class="text-sm font-medium" id="sidebar-status-text"><%= status && status.online ? 'Online' : 'Offline' %></span>
        </div>
        <a href="/logout" class="flex items-center gap-3 px-4 py-3 rounded-lg text-red-500 hover:bg-red-50 dark:hover:bg-red-900/20 transition-all">
            <span class="material-icons">logout</span>
            <span>Logout</span>
        </a>
    </div>
</aside>
<div class="md:pl-64 w-full flex flex-col"> <!-- Main content wrapper -->
<% } else { %>
<div class="w-full flex flex-col"> <!-- Main content wrapper for login -->
<% } %>
