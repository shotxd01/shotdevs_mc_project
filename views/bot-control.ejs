<%- include('partials/header') %>
<%- include('partials/sidebar') %>

<script>
    const BOT_ID = "<%= botId %>";
</script>

<main class="flex-1 p-6 md:p-8 overflow-y-auto h-screen flex flex-col gap-6">
    <!-- Header -->
    <header class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
        <div class="flex items-center gap-3">
            <a href="/" class="p-2 bg-slate-100 dark:bg-slate-800/50 rounded-lg text-slate-500 hover:text-slate-700 dark:hover:text-slate-300 transition-colors">
                <span class="material-icons text-sm">arrow_back</span>
            </a>
            <div>
                <h2 class="text-xl md:text-2xl font-semibold"><%= botConfig.name %></h2>
                <div class="flex items-center gap-2 text-sm text-slate-500 dark:text-slate-400 mt-1">
                    <span id="status-dot" class="w-2 h-2 rounded-full <%= status.online ? 'bg-green-500' : 'bg-red-500' %>"></span>
                    <span id="status-text"><%= status.online ? 'Online' : 'Offline' %></span>
                    <span>â€¢</span>
                    <span><%= typeof status.server !== 'undefined' ? status.server.ip + ':' + status.server.port : 'No server configured' %></span>
                </div>
            </div>
        </div>

        <div class="flex items-center gap-2">
            <button onclick="deleteBot()" class="text-red-500 hover:bg-red-50 dark:hover:bg-red-900/10 px-3 py-1.5 rounded-lg font-medium transition-colors border border-transparent hover:border-red-500/20 text-sm">
                Delete Bot
            </button>
        </div>
    </header>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 flex-1 min-h-0">
        <!-- Left Column: Controls & Console -->
        <div class="lg:col-span-2 flex flex-col gap-5 min-h-0">
            <!-- Controls -->
            <div class="bg-white dark:bg-slate-800/60 backdrop-blur-sm rounded-xl border border-slate-200 dark:border-slate-700/50 p-5">
                <div class="flex flex-wrap gap-3">
                    <button id="start-stop-btn" onclick="toggleStartStop()" class="flex-1 flex items-center justify-center gap-2 px-4 py-2.5 bg-green-500 hover:bg-green-600 text-white rounded-lg font-medium transition-all text-sm min-w-[120px]">
                        <span id="start-stop-icon" class="material-icons text-sm">play_arrow</span> <span id="start-stop-text">Start</span>
                    </button>
                    <button onclick="controlBot('restart')" class="flex-1 flex items-center justify-center gap-2 px-4 py-2.5 bg-amber-500 hover:bg-amber-600 text-white rounded-lg font-medium transition-all text-sm min-w-[120px]">
                        <span class="material-icons text-sm">refresh</span> Restart
                    </button>
                    <div class="w-px h-8 bg-slate-200 dark:bg-slate-700/50 hidden md:block"></div>
                    <button id="afk-btn" onclick="toggleAfk()" class="flex-1 flex items-center justify-center gap-2 px-4 py-2.5 bg-slate-100 dark:bg-slate-700 hover:bg-slate-200 dark:hover:bg-slate-600 text-slate-700 dark:text-slate-200 rounded-lg font-medium transition-all text-sm min-w-[120px]">
                        <span class="material-icons text-sm">cached</span> Toggle AFK
                    </button>
                </div>

                <!-- Status Row -->
                <div class="grid grid-cols-3 gap-3 mt-5 pt-5 border-t border-slate-100 dark:border-slate-700/50">
                    <div class="text-center">
                        <div class="text-xs text-slate-500 uppercase font-medium mb-1">Uptime</div>
                        <div id="uptime-text" class="font-mono text-sm"><%= status.uptime %></div>
                    </div>
                    <div class="text-center border-l border-r border-slate-100 dark:border-slate-700/50">
                        <div class="text-xs text-slate-500 uppercase font-medium mb-1">Auth Status</div>
                        <div id="auth-status" class="<%= status.authStatus === 'Verified' ? 'text-green-500' : 'text-amber-500' %> text-sm font-medium"><%= status.authStatus %></div>
                    </div>
                    <div class="text-center">
                        <div class="text-xs text-slate-500 uppercase font-medium mb-1">Username</div>
                        <div id="bot-username" class="text-sm font-medium truncate"><%= status.username || '-' %></div>
                    </div>
                </div>

                <!-- Bot Details Container -->
                <div class="mt-5 pt-5 border-t border-slate-100 dark:border-slate-700/50">
                    <h3 class="text-xs font-medium text-slate-500 uppercase mb-3 tracking-wide">Bot Information</h3>
                    <div class="grid grid-cols-2 md:grid-cols-5 gap-3">
                        <div class="bg-slate-50 dark:bg-slate-700/30 p-3 rounded-lg text-center">
                            <div class="text-xs text-slate-500 mb-1">Username</div>
                            <div id="detail-username" class="text-xs font-medium truncate"><%= status.username || '-' %></div>
                        </div>
                        <div class="bg-slate-50 dark:bg-slate-700/30 p-3 rounded-lg text-center">
                            <div class="text-xs text-slate-500 mb-1">Health</div>
                            <div id="detail-health" class="text-xs font-medium text-red-500">-</div>
                        </div>
                        <div class="bg-slate-50 dark:bg-slate-700/30 p-3 rounded-lg text-center">
                            <div class="text-xs text-slate-500 mb-1">Food</div>
                            <div id="detail-food" class="text-xs font-medium text-green-500">-</div>
                        </div>
                        <div class="bg-slate-50 dark:bg-slate-700/30 p-3 rounded-lg text-center">
                            <div class="text-xs text-slate-500 mb-1">Position</div>
                            <div id="detail-position" class="text-xs font-mono break-all">-</div>
                        </div>
                        <div class="bg-slate-50 dark:bg-slate-700/30 p-3 rounded-lg text-center">
                            <div class="text-xs text-slate-500 mb-1">Dimension</div>
                            <div id="detail-dimension" class="text-xs font-medium capitalize">-</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Console -->
            <div class="flex-1 bg-slate-900 rounded-xl border border-slate-700/50 flex flex-col overflow-hidden min-h-[350px]">
                <div class="px-3 py-2 bg-slate-800 border-b border-slate-700/50 flex justify-between items-center">
                    <span class="text-xs font-mono text-slate-400">CONSOLE</span>
                    <button onclick="clearConsole()" class="text-xs text-slate-500 hover:text-slate-300">Clear</button>
                </div>
                <div id="console-logs" class="flex-1 p-3 overflow-y-auto font-mono text-xs space-y-0.5 console-logs bg-slate-900 text-slate-300">
                    <div class="text-slate-500 italic">Connecting to console stream...</div>
                </div>
                <div class="p-3 bg-slate-800 border-t border-slate-700/50">
                    <form onsubmit="sendCommand(event)" class="flex gap-2">
                        <input type="text" id="command-input" class="flex-1 px-3 py-1.5 rounded-lg bg-slate-900 border border-slate-700 text-white focus:ring-1 focus:ring-slate-400 outline-none font-mono text-sm" placeholder="Type a command (/) or chat message..." autocomplete="off">
                        <button type="submit" class="px-3 py-1.5 bg-slate-700 hover:bg-slate-600 text-white font-medium rounded-lg transition-all text-sm">
                            Send
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Right Column: Settings -->
        <div class="flex flex-col gap-5">
            <!-- Configuration -->
            <div class="bg-white dark:bg-slate-800/60 backdrop-blur-sm p-5 rounded-xl border border-slate-200 dark:border-slate-700/50">
                <h3 class="text-base font-semibold mb-4 flex items-center gap-2">
                    <span class="material-icons text-slate-600 dark:text-slate-400 text-sm">settings</span> Configuration
                </h3>
                <form onsubmit="updateBotConfig(event)" class="space-y-3">
                    <div>
                        <label class="block text-xs font-medium text-slate-500 uppercase mb-1.5">Name</label>
                        <input type="text" name="name" value="<%= botConfig.name %>" class="w-full px-2.5 py-2 rounded-lg bg-slate-50 dark:bg-slate-900/50 border border-slate-200 dark:border-slate-700 text-sm outline-none focus:ring-1 focus:ring-slate-400">
                    </div>
                    <div>
                        <label class="block text-xs font-medium text-slate-500 uppercase mb-1.5">Server IP</label>
                        <input type="text" name="ip" value="<%= typeof botConfig.server !== 'undefined' ? botConfig.server.ip : '' %>" class="w-full px-2.5 py-2 rounded-lg bg-slate-50 dark:bg-slate-900/50 border border-slate-200 dark:border-slate-700 text-sm outline-none focus:ring-1 focus:ring-slate-400">
                    </div>
                    <div class="grid grid-cols-2 gap-3">
                        <div>
                            <label class="block text-xs font-medium text-slate-500 uppercase mb-1.5">Port</label>
                            <input type="number" name="port" value="<%= typeof botConfig.server !== 'undefined' ? botConfig.server.port : '25565' %>" class="w-full px-2.5 py-2 rounded-lg bg-slate-50 dark:bg-slate-900/50 border border-slate-200 dark:border-slate-700 text-sm outline-none focus:ring-1 focus:ring-slate-400">
                        </div>
                        <div>
                            <label class="block text-xs font-medium text-slate-500 uppercase mb-1.5">Version</label>
                            <input type="text" name="version" value="<%= typeof botConfig.server !== 'undefined' ? botConfig.server.version : '1.20.4' %>" class="w-full px-2.5 py-2 rounded-lg bg-slate-50 dark:bg-slate-900/50 border border-slate-200 dark:border-slate-700 text-sm outline-none focus:ring-1 focus:ring-slate-400">
                        </div>
                    </div>
                    <div>
                        <label class="block text-xs font-medium text-slate-500 uppercase mb-1.5">Microsoft Email</label>
                        <input type="email" name="email" value="<%= typeof botConfig.account !== 'undefined' ? botConfig.account.email : '' %>" class="w-full px-2.5 py-2 rounded-lg bg-slate-50 dark:bg-slate-900/50 border border-slate-200 dark:border-slate-700 text-sm outline-none focus:ring-1 focus:ring-slate-400">
                    </div>
                    <button type="submit" class="w-full bg-slate-800 hover:bg-slate-900 dark:bg-slate-700 dark:hover:bg-slate-600 text-white font-medium py-2 rounded-lg transition-all text-sm border border-slate-200 dark:border-slate-700 shadow-sm">
                        Save Changes
                    </button>
                </form>
            </div>

            <div class="bg-slate-50 dark:bg-slate-800/30 p-3 rounded-lg text-xs text-slate-500 dark:text-slate-400">
                 Auth is handled automatically via Microsoft. If a code appears, use it to login.
            </div>
        </div>
    </div>
</main>

<!-- Microsoft Auth Modal -->
<div id="auth-modal" class="fixed inset-0 z-50 flex items-center justify-center bg-black/40 backdrop-blur-sm hidden opacity-0 transition-opacity duration-300">
    <div class="bg-white dark:bg-slate-800/90 backdrop-blur-md p-5 rounded-xl w-full max-w-md mx-4 transform scale-95 transition-transform duration-300 border border-slate-200 dark:border-slate-700/50 shadow-xl" id="auth-modal-content">
        <div class="text-center mb-5">
            <span class="material-icons text-slate-600 dark:text-slate-400 text-3xl mb-3">microsoft</span>
            <h3 class="text-lg font-semibold">Microsoft Authentication Required</h3>
            <p class="text-slate-500 dark:text-slate-400 mt-2 text-sm">Please verify your account to continue.</p>
        </div>

        <div class="bg-slate-50 dark:bg-slate-900/50 p-3 rounded-lg mb-5 border border-slate-200 dark:border-slate-700/50">
            <p class="text-xs text-slate-500 dark:text-slate-400 mb-2">Verification Code:</p>
            <div class="flex items-center justify-between gap-2">
                <code id="auth-code" class="text-lg font-mono font-medium text-slate-700 dark:text-slate-300"></code>
                <button onclick="copyCode()" class="p-1.5 hover:bg-slate-200 dark:hover:bg-slate-700 rounded text-slate-500 transition-colors" title="Copy Code">
                    <span class="material-icons text-xs">content_copy</span>
                </button>
            </div>
        </div>

        <a id="auth-link" href="#" target="_blank" class="block w-full bg-slate-800 hover:bg-slate-900 dark:bg-slate-700 dark:hover:bg-slate-600 text-white text-center font-medium py-2.5 rounded-lg mb-4 transition-all text-sm border border-slate-200 dark:border-slate-700 shadow-sm">
            Open Microsoft Login
        </a>

        <button onclick="closeAuthModal()" class="w-full text-slate-500 hover:text-slate-700 dark:hover:text-slate-300 font-medium py-2 text-sm">
            Close
        </button>
    </div>
</div>

<%- include('partials/footer') %>
