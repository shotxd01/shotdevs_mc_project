<%- include('partials/header') %>
<%- include('partials/sidebar') %>

<main class="flex-1 p-4 md:p-6">
    <div class="mb-6">
        <h1 class="text-2xl font-bold">Admin Dashboard</h1>
        <p class="text-slate-600 dark:text-slate-400">Manage users, bots, and server profiles</p>
    </div>

    <div class="flex flex-wrap gap-2 mb-6">
        <button class="admin-tab px-4 py-2 rounded-lg text-sm font-medium bg-slate-900 text-white" data-tab="users">Users</button>
        <button class="admin-tab px-4 py-2 rounded-lg text-sm font-medium bg-slate-100 dark:bg-slate-800 text-slate-700 dark:text-slate-200" data-tab="bots">Bots</button>
        <button class="admin-tab px-4 py-2 rounded-lg text-sm font-medium bg-slate-100 dark:bg-slate-800 text-slate-700 dark:text-slate-200" data-tab="servers">Servers</button>
        <button class="admin-tab px-4 py-2 rounded-lg text-sm font-medium bg-slate-100 dark:bg-slate-800 text-slate-700 dark:text-slate-200" data-tab="logs">Logs</button>
    </div>

    <section id="tab-users" class="admin-tab-panel">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            <div class="bg-white dark:bg-slate-800/60 backdrop-blur-sm rounded-xl border border-slate-200 dark:border-slate-700/50 p-6">
                <div class="flex justify-between items-center mb-4">
                    <h2 class="text-lg font-semibold">Users</h2>
                    <span class="text-sm text-slate-500 dark:text-slate-400"><%= users.length %> total users</span>
                </div>
                <div class="space-y-3 max-h-96 overflow-y-auto">
                    <% users.forEach(function(user) { %>
                    <div class="p-3 bg-slate-50 dark:bg-slate-700/30 rounded-lg border border-slate-200 dark:border-slate-600/50">
                        <div class="flex justify-between items-center">
                            <div>
                                <h3 class="font-medium"><%= user.username %></h3>
                                <div class="flex items-center gap-2 mt-1">
                                    <span class="inline-block px-2 py-0.5 text-xs rounded-full bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-300">
                                        <%= typeof user.role !== 'undefined' && user.role ? user.role.charAt(0).toUpperCase() + user.role.slice(1) : 'User' %>
                                    </span>
                                    <span class="text-xs text-slate-500 dark:text-slate-400">
                                        Joined: <%= new Date(user.createdAt).toLocaleDateString() %>
                                    </span>
                                </div>
                            </div>
                            <div class="flex gap-2">
                                <% if (user.role === 'user') { %>
                                <button onclick="promoteUser('<%= user.username %>')" class="px-3 py-1.5 bg-green-500 hover:bg-green-600 text-white text-xs rounded-lg transition-colors">
                                    Promote
                                </button>
                                <% } else if (user.role === 'admin') { %>
                                <button onclick="demoteUser('<%= user.username %>')" class="px-3 py-1.5 bg-yellow-500 hover:bg-yellow-600 text-white text-xs rounded-lg transition-colors">
                                    Demote
                                </button>
                                <% } %>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                </div>
            </div>

            <div class="bg-white dark:bg-slate-800/60 backdrop-blur-sm rounded-xl border border-slate-200 dark:border-slate-700/50 p-6">
                <h2 class="text-lg font-semibold mb-4">Create User</h2>
                <form onsubmit="createUser(event)" class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-medium mb-1.5 text-slate-700 dark:text-slate-300">Username</label>
                        <input type="text" name="username" placeholder="Username" required class="w-full bg-slate-50 dark:bg-slate-900/50 border border-slate-200 dark:border-slate-700 rounded-lg px-3 py-2.5 focus:ring-1 focus:ring-slate-400 outline-none transition-all text-sm">
                    </div>
                    <div>
                        <label class="block text-sm font-medium mb-1.5 text-slate-700 dark:text-slate-300">Password</label>
                        <input type="password" name="password" placeholder="Password" required class="w-full bg-slate-50 dark:bg-slate-900/50 border border-slate-200 dark:border-slate-700 rounded-lg px-3 py-2.5 focus:ring-1 focus:ring-slate-400 outline-none transition-all text-sm">
                    </div>
                    <div>
                        <label class="block text-sm font-medium mb-1.5 text-slate-700 dark:text-slate-300">Role</label>
                        <select name="role" class="w-full bg-slate-50 dark:bg-slate-900/50 border border-slate-200 dark:border-slate-700 rounded-lg px-3 py-2.5 focus:ring-1 focus:ring-slate-400 outline-none transition-all text-sm">
                            <option value="user">User</option>
                            <option value="admin">Admin</option>
                        </select>
                    </div>
                    <div class="md:col-span-2 flex justify-end">
                        <button type="submit" class="px-4 py-2.5 bg-slate-800 hover:bg-slate-900 dark:bg-slate-700 dark:hover:bg-slate-600 text-white rounded-lg font-medium text-sm border border-slate-200 dark:border-slate-700 shadow-sm">
                            Create User
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </section>

    <section id="tab-bots" class="admin-tab-panel hidden">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            <div class="bg-white dark:bg-slate-800/60 backdrop-blur-sm rounded-xl border border-slate-200 dark:border-slate-700/50 p-6">
                <div class="flex justify-between items-center mb-4">
                    <h2 class="text-lg font-semibold">Bot Assignments</h2>
                    <span class="text-sm text-slate-500 dark:text-slate-400"><%= bots.length %> total bots</span>
                </div>
                <div class="space-y-3 max-h-96 overflow-y-auto">
                    <% bots.forEach(function(bot) { %>
                    <div class="p-3 bg-slate-50 dark:bg-slate-700/30 rounded-lg border border-slate-200 dark:border-slate-600/50">
                        <div class="flex justify-between items-center">
                            <div class="w-full">
                                <div class="flex items-center justify-between">
                                    <h3 class="font-medium"><%= bot.name %></h3>
                                    <span class="text-xs text-slate-500 dark:text-slate-400">ID: #<%= bot.id %></span>
                                </div>
                                <div class="flex items-center gap-2 mt-1">
                                    <span class="text-xs text-slate-500 dark:text-slate-400">
                                        <%= typeof bot.server !== 'undefined' ? bot.server.ip + ':' + bot.server.port : 'No server configured' %>
                                    </span>
                                    <span class="text-xs text-slate-500 dark:text-slate-400">
                                        <%= typeof bot.server !== 'undefined' ? bot.server.version : 'Unknown' %>
                                    </span>
                                </div>
                                <div class="mt-2">
                                    <label class="text-xs text-slate-500 dark:text-slate-400">Assigned to:</label>
                                    <select onchange="assignBotToUser(<%= bot.id %>, this.value)" class="w-full mt-1 text-xs bg-slate-100 dark:bg-slate-900/50 border border-slate-200 dark:border-slate-700 rounded px-2 py-1">
                                        <option value="" <%= !bot.assignedTo ? 'selected' : '' %>>Unassigned</option>
                                        <% users.forEach(function(user) { %>
                                            <option value="<%= user.username %>" <%= bot.assignedTo === user.username ? 'selected' : '' %>><%= user.username %></option>
                                        <% }); %>
                                    </select>
                                </div>
                                <div class="mt-3">
                                    <label class="text-xs text-slate-500 dark:text-slate-400">Server profile:</label>
                                    <div class="flex flex-wrap gap-2 mt-1">
                                        <select class="server-select w-full md:w-auto text-xs bg-slate-100 dark:bg-slate-900/50 border border-slate-200 dark:border-slate-700 rounded px-2 py-1" data-bot-id="<%= bot.id %>">
                                            <option value="">Unassigned</option>
                                            <% servers.forEach(function(server) { %>
                                                <option value="<%= server._id %>" <%= bot.serverProfile && String(bot.serverProfile) === String(server._id) ? 'selected' : '' %>><%= server.name %></option>
                                            <% }); %>
                                        </select>
                                        <label class="flex items-center gap-2 text-xs text-slate-500 dark:text-slate-400">
                                            <input type="checkbox" class="apply-profile" data-bot-id="<%= bot.id %>">
                                            Apply profile settings
                                        </label>
                                        <button type="button" onclick="assignBotServer(<%= bot.id %>)" class="px-3 py-1.5 bg-slate-800 hover:bg-slate-900 dark:bg-slate-700 dark:hover:bg-slate-600 text-white text-xs rounded-lg transition-colors">
                                            Save
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                </div>
            </div>

            <div class="bg-white dark:bg-slate-800/60 backdrop-blur-sm rounded-xl border border-slate-200 dark:border-slate-700/50 p-6">
                <h2 class="text-lg font-semibold mb-4">Create New Bot</h2>
                <form onsubmit="createNewBot(event)" class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-medium mb-1.5 text-slate-700 dark:text-slate-300">Name</label>
                        <input type="text" name="name" placeholder="Bot name" required class="w-full bg-slate-50 dark:bg-slate-900/50 border border-slate-200 dark:border-slate-700 rounded-lg px-3 py-2.5 focus:ring-1 focus:ring-slate-400 outline-none transition-all text-sm">
                    </div>
                    <div>
                        <label class="block text-sm font-medium mb-1.5 text-slate-700 dark:text-slate-300">Email</label>
                        <input type="email" name="email" placeholder="Account email" required class="w-full bg-slate-50 dark:bg-slate-900/50 border border-slate-200 dark:border-slate-700 rounded-lg px-3 py-2.5 focus:ring-1 focus:ring-slate-400 outline-none transition-all text-sm">
                    </div>
                    <div>
                        <label class="block text-sm font-medium mb-1.5 text-slate-700 dark:text-slate-300">IP</label>
                        <input type="text" name="ip" placeholder="Server IP" required class="w-full bg-slate-50 dark:bg-slate-900/50 border border-slate-200 dark:border-slate-700 rounded-lg px-3 py-2.5 focus:ring-1 focus:ring-slate-400 outline-none transition-all text-sm">
                    </div>
                    <div>
                        <label class="block text-sm font-medium mb-1.5 text-slate-700 dark:text-slate-300">Port</label>
                        <input type="number" name="port" value="25565" required class="w-full bg-slate-50 dark:bg-slate-900/50 border border-slate-200 dark:border-slate-700 rounded-lg px-3 py-2.5 focus:ring-1 focus:ring-slate-400 outline-none transition-all text-sm">
                    </div>
                    <div>
                        <label class="block text-sm font-medium mb-1.5 text-slate-700 dark:text-slate-300">Version</label>
                        <select name="version" class="w-full bg-slate-50 dark:bg-slate-900/50 border border-slate-200 dark:border-slate-700 rounded-lg px-3 py-2.5 focus:ring-1 focus:ring-slate-400 outline-none transition-all text-sm">
                            <option value="1.20.4">1.20.4</option>
                            <option value="1.20.1">1.20.1</option>
                            <option value="1.19.4">1.19.4</option>
                            <option value="1.18.2">1.18.2</option>
                            <option value="1.12.2">1.12.2</option>
                            <option value="auto">Auto</option>
                        </select>
                    </div>
                    <div class="md:col-span-2 flex justify-end">
                        <button type="submit" class="px-4 py-2.5 bg-slate-800 hover:bg-slate-900 dark:bg-slate-700 dark:hover:bg-slate-600 text-white rounded-lg font-medium text-sm border border-slate-200 dark:border-slate-700 shadow-sm">
                            Create Bot
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </section>

    <section id="tab-servers" class="admin-tab-panel hidden">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            <div class="bg-white dark:bg-slate-800/60 backdrop-blur-sm rounded-xl border border-slate-200 dark:border-slate-700/50 p-6">
                <div class="flex justify-between items-center mb-4">
                    <h2 class="text-lg font-semibold">Server Profiles</h2>
                    <span class="text-sm text-slate-500 dark:text-slate-400"><%= servers.length %> total servers</span>
                </div>
                <div class="space-y-3 max-h-96 overflow-y-auto">
                    <% servers.forEach(function(server) { %>
                    <div class="p-3 bg-slate-50 dark:bg-slate-700/30 rounded-lg border border-slate-200 dark:border-slate-600/50">
                        <div class="flex justify-between items-start">
                            <div>
                                <h3 class="font-medium"><%= server.name %></h3>
                                <div class="flex flex-wrap items-center gap-2 mt-1">
                                    <span class="text-xs text-slate-500 dark:text-slate-400"><%= server.ip %>:<%= server.port %></span>
                                    <span class="text-xs text-slate-500 dark:text-slate-400"><%= server.version %></span>
                                    <span class="text-xs text-slate-500 dark:text-slate-400">Max bots: <%= server.maxBots || 0 %></span>
                                    <% if (server.region) { %>
                                        <span class="text-xs text-slate-500 dark:text-slate-400"><%= server.region %></span>
                                    <% } %>
                                    <% if (server.whitelist) { %>
                                        <span class="text-xs text-slate-500 dark:text-slate-400">Whitelist</span>
                                    <% } %>
                                </div>
                                <% if (server.notes) { %>
                                    <div class="text-xs text-slate-500 dark:text-slate-400 mt-2"><%= server.notes %></div>
                                <% } %>
                            </div>
                            <button onclick="deleteServerProfile('<%= server._id %>', '<%= server.name %>')" class="px-3 py-1.5 bg-red-500 hover:bg-red-600 text-white text-xs rounded-lg transition-colors">
                                Delete
                            </button>
                        </div>
                    </div>
                    <% }); %>
                </div>
            </div>

            <div class="bg-white dark:bg-slate-800/60 backdrop-blur-sm rounded-xl border border-slate-200 dark:border-slate-700/50 p-6">
                <h2 class="text-lg font-semibold mb-4">Create Server Profile</h2>
                <form onsubmit="createServerProfile(event)" class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-medium mb-1.5 text-slate-700 dark:text-slate-300">Name</label>
                        <input type="text" name="name" placeholder="Server name" required class="w-full bg-slate-50 dark:bg-slate-900/50 border border-slate-200 dark:border-slate-700 rounded-lg px-3 py-2.5 focus:ring-1 focus:ring-slate-400 outline-none transition-all text-sm">
                    </div>
                    <div>
                        <label class="block text-sm font-medium mb-1.5 text-slate-700 dark:text-slate-300">Region</label>
                        <input type="text" name="region" placeholder="Region" class="w-full bg-slate-50 dark:bg-slate-900/50 border border-slate-200 dark:border-slate-700 rounded-lg px-3 py-2.5 focus:ring-1 focus:ring-slate-400 outline-none transition-all text-sm">
                    </div>
                    <div>
                        <label class="block text-sm font-medium mb-1.5 text-slate-700 dark:text-slate-300">IP</label>
                        <input type="text" name="ip" placeholder="Server IP" required class="w-full bg-slate-50 dark:bg-slate-900/50 border border-slate-200 dark:border-slate-700 rounded-lg px-3 py-2.5 focus:ring-1 focus:ring-slate-400 outline-none transition-all text-sm">
                    </div>
                    <div>
                        <label class="block text-sm font-medium mb-1.5 text-slate-700 dark:text-slate-300">Port</label>
                        <input type="number" name="port" value="25565" required class="w-full bg-slate-50 dark:bg-slate-900/50 border border-slate-200 dark:border-slate-700 rounded-lg px-3 py-2.5 focus:ring-1 focus:ring-slate-400 outline-none transition-all text-sm">
                    </div>
                    <div>
                        <label class="block text-sm font-medium mb-1.5 text-slate-700 dark:text-slate-300">Version</label>
                        <select name="version" class="w-full bg-slate-50 dark:bg-slate-900/50 border border-slate-200 dark:border-slate-700 rounded-lg px-3 py-2.5 focus:ring-1 focus:ring-slate-400 outline-none transition-all text-sm">
                            <option value="1.20.4">1.20.4</option>
                            <option value="1.20.1">1.20.1</option>
                            <option value="1.19.4">1.19.4</option>
                            <option value="1.18.2">1.18.2</option>
                            <option value="1.12.2">1.12.2</option>
                            <option value="auto">Auto</option>
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-medium mb-1.5 text-slate-700 dark:text-slate-300">Max Bots</label>
                        <input type="number" name="maxBots" value="0" class="w-full bg-slate-50 dark:bg-slate-900/50 border border-slate-200 dark:border-slate-700 rounded-lg px-3 py-2.5 focus:ring-1 focus:ring-slate-400 outline-none transition-all text-sm">
                    </div>
                    <div class="md:col-span-2">
                        <label class="block text-sm font-medium mb-1.5 text-slate-700 dark:text-slate-300">Notes</label>
                        <textarea name="notes" rows="3" placeholder="Notes" class="w-full bg-slate-50 dark:bg-slate-900/50 border border-slate-200 dark:border-slate-700 rounded-lg px-3 py-2.5 focus:ring-1 focus:ring-slate-400 outline-none transition-all text-sm"></textarea>
                    </div>
                    <div class="md:col-span-2 flex items-center gap-2">
                        <input type="checkbox" name="whitelist" id="whitelist" class="h-4 w-4">
                        <label for="whitelist" class="text-sm text-slate-700 dark:text-slate-300">Whitelist enabled</label>
                    </div>
                    <div class="md:col-span-2 flex justify-end">
                        <button type="submit" class="px-4 py-2.5 bg-slate-800 hover:bg-slate-900 dark:bg-slate-700 dark:hover:bg-slate-600 text-white rounded-lg font-medium text-sm border border-slate-200 dark:border-slate-700 shadow-sm">
                            Create Server
                        </button>
                    </div>
                </form>
            </div>

            <div class="bg-white dark:bg-slate-800/60 backdrop-blur-sm rounded-xl border border-slate-200 dark:border-slate-700/50 p-6 lg:col-span-2">
                <h2 class="text-lg font-semibold mb-4">Edit Server Profile</h2>
                <form onsubmit="updateServerProfile(event)" class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div class="md:col-span-2">
                        <label class="block text-sm font-medium mb-1.5 text-slate-700 dark:text-slate-300">Select Server</label>
                        <select name="serverId" id="editServerSelect" required class="w-full bg-slate-50 dark:bg-slate-900/50 border border-slate-200 dark:border-slate-700 rounded-lg px-3 py-2.5 focus:ring-1 focus:ring-slate-400 outline-none transition-all text-sm">
                            <option value="">Select a server</option>
                            <% servers.forEach(function(server) { %>
                                <option value="<%= server._id %>"><%= server.name %></option>
                            <% }); %>
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-medium mb-1.5 text-slate-700 dark:text-slate-300">Name</label>
                        <input type="text" name="name" id="editServerName" required class="w-full bg-slate-50 dark:bg-slate-900/50 border border-slate-200 dark:border-slate-700 rounded-lg px-3 py-2.5 focus:ring-1 focus:ring-slate-400 outline-none transition-all text-sm">
                    </div>
                    <div>
                        <label class="block text-sm font-medium mb-1.5 text-slate-700 dark:text-slate-300">Region</label>
                        <input type="text" name="region" id="editServerRegion" class="w-full bg-slate-50 dark:bg-slate-900/50 border border-slate-200 dark:border-slate-700 rounded-lg px-3 py-2.5 focus:ring-1 focus:ring-slate-400 outline-none transition-all text-sm">
                    </div>
                    <div>
                        <label class="block text-sm font-medium mb-1.5 text-slate-700 dark:text-slate-300">IP</label>
                        <input type="text" name="ip" id="editServerIp" required class="w-full bg-slate-50 dark:bg-slate-900/50 border border-slate-200 dark:border-slate-700 rounded-lg px-3 py-2.5 focus:ring-1 focus:ring-slate-400 outline-none transition-all text-sm">
                    </div>
                    <div>
                        <label class="block text-sm font-medium mb-1.5 text-slate-700 dark:text-slate-300">Port</label>
                        <input type="number" name="port" id="editServerPort" required class="w-full bg-slate-50 dark:bg-slate-900/50 border border-slate-200 dark:border-slate-700 rounded-lg px-3 py-2.5 focus:ring-1 focus:ring-slate-400 outline-none transition-all text-sm">
                    </div>
                    <div>
                        <label class="block text-sm font-medium mb-1.5 text-slate-700 dark:text-slate-300">Version</label>
                        <select name="version" id="editServerVersion" class="w-full bg-slate-50 dark:bg-slate-900/50 border border-slate-200 dark:border-slate-700 rounded-lg px-3 py-2.5 focus:ring-1 focus:ring-slate-400 outline-none transition-all text-sm">
                            <option value="1.20.4">1.20.4</option>
                            <option value="1.20.1">1.20.1</option>
                            <option value="1.19.4">1.19.4</option>
                            <option value="1.18.2">1.18.2</option>
                            <option value="1.12.2">1.12.2</option>
                            <option value="auto">Auto</option>
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-medium mb-1.5 text-slate-700 dark:text-slate-300">Max Bots</label>
                        <input type="number" name="maxBots" id="editServerMaxBots" class="w-full bg-slate-50 dark:bg-slate-900/50 border border-slate-200 dark:border-slate-700 rounded-lg px-3 py-2.5 focus:ring-1 focus:ring-slate-400 outline-none transition-all text-sm">
                    </div>
                    <div class="md:col-span-2">
                        <label class="block text-sm font-medium mb-1.5 text-slate-700 dark:text-slate-300">Notes</label>
                        <textarea name="notes" id="editServerNotes" rows="3" class="w-full bg-slate-50 dark:bg-slate-900/50 border border-slate-200 dark:border-slate-700 rounded-lg px-3 py-2.5 focus:ring-1 focus:ring-slate-400 outline-none transition-all text-sm"></textarea>
                    </div>
                    <div class="md:col-span-2 flex items-center gap-2">
                        <input type="checkbox" name="whitelist" id="editServerWhitelist" class="h-4 w-4">
                        <label for="editServerWhitelist" class="text-sm text-slate-700 dark:text-slate-300">Whitelist enabled</label>
                    </div>
                    <div class="md:col-span-2 flex justify-end">
                        <button type="submit" class="px-4 py-2.5 bg-slate-800 hover:bg-slate-900 dark:bg-slate-700 dark:hover:bg-slate-600 text-white rounded-lg font-medium text-sm border border-slate-200 dark:border-slate-700 shadow-sm">
                            Update Server
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </section>

    <section id="tab-logs" class="admin-tab-panel hidden">
        <div class="bg-white dark:bg-slate-800/60 backdrop-blur-sm rounded-xl border border-slate-200 dark:border-slate-700/50 p-6">
            <div class="flex justify-between items-center mb-4">
                <h2 class="text-lg font-semibold">Admin Audit Logs</h2>
                <span class="text-sm text-slate-500 dark:text-slate-400"><%= logs.length %> entries</span>
            </div>
            <div class="space-y-3 max-h-[520px] overflow-y-auto">
                <% logs.forEach(function(log) { %>
                <div class="p-3 bg-slate-50 dark:bg-slate-700/30 rounded-lg border border-slate-200 dark:border-slate-600/50">
                    <div class="flex flex-wrap items-center gap-2 text-xs text-slate-500 dark:text-slate-400">
                        <span><%= new Date(log.createdAt).toLocaleString() %></span>
                        <span class="font-medium text-slate-700 dark:text-slate-200"><%= log.actor %></span>
                        <span class="uppercase text-slate-500 dark:text-slate-400"><%= log.action %></span>
                        <% if (log.target) { %>
                            <span class="text-slate-500 dark:text-slate-400">Target: <%= log.target %></span>
                        <% } %>
                    </div>
                    <% if (log.details) { %>
                        <pre class="mt-2 text-xs text-slate-600 dark:text-slate-300 whitespace-pre-wrap"><%- JSON.stringify(log.details, null, 2) %></pre>
                    <% } %>
                </div>
                <% }); %>
            </div>
        </div>
    </section>
</main>

<script>
async function promoteUser(username) {
    if (confirm(`Promote user '${username}' to admin?`)) {
        try {
            const res = await fetch('/api/admin/promote', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ username })
            });
            
            if (res.ok) {
                window.location.reload();
            } else {
                alert('Failed to promote user');
            }
        } catch (err) {
            console.error(err);
            alert('Error promoting user');
        }
    }
}

async function demoteUser(username) {
    if (confirm(`Demote user '${username}' to regular user?`)) {
        try {
            const res = await fetch('/api/admin/demote', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ username })
            });
            
            if (res.ok) {
                window.location.reload();
            } else {
                alert('Failed to demote user');
            }
        } catch (err) {
            console.error(err);
            alert('Error demoting user');
        }
    }
}

async function createNewBot(e) {
    e.preventDefault();
    const formData = new FormData(e.target);
    const data = Object.fromEntries(formData.entries());

    try {
        const res = await fetch('/api/bots/create', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(data)
        });

        if (res.ok) {
            window.location.reload();
        } else {
            const errorData = await res.json();
            alert(errorData.error || 'Failed to create bot');
        }
    } catch (err) {
        console.error(err);
        alert('Error creating bot');
    }
}

async function createUser(e) {
    e.preventDefault();
    const formData = new FormData(e.target);
    const data = Object.fromEntries(formData.entries());

    try {
        const res = await fetch('/api/admin/create-user', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(data)
        });

        const result = await res.json();
        if (res.ok && result.success) {
            window.location.reload();
        } else {
            alert(result.error || 'Failed to create user');
        }
    } catch (err) {
        console.error(err);
        alert('Error creating user');
    }
}

async function assignBotToUser(botId, username) {
    try {
        const res = await fetch('/api/admin/assign-bot', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ botId, username })
        });
        
        if (res.ok) {
            // Success - no need to reload, just show success message
            console.log('Bot assigned successfully');
        } else {
            const errorData = await res.json();
            alert(errorData.error || 'Failed to assign bot');
            // Reset dropdown to previous value if needed
            window.location.reload();
        }
    } catch (err) {
        console.error(err);
        alert('Error assigning bot');
        window.location.reload();
    }
}

async function updateServerProfile(e) {
    e.preventDefault();
    const formData = new FormData(e.target);
    const data = Object.fromEntries(formData.entries());
    data.whitelist = formData.get('whitelist') === 'on';

    try {
        const res = await fetch('/api/servers/update', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(data)
        });
        const result = await res.json();
        if (res.ok && result.success) {
            window.location.reload();
        } else {
            alert(result.error || 'Failed to update server');
        }
    } catch (err) {
        console.error(err);
        alert('Error updating server');
    }
}

async function createServerProfile(e) {
    e.preventDefault();
    const formData = new FormData(e.target);
    const data = Object.fromEntries(formData.entries());
    data.whitelist = formData.get('whitelist') === 'on';

    try {
        const res = await fetch('/api/servers/create', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(data)
        });

        const result = await res.json();
        if (res.ok && result.success) {
            window.location.reload();
        } else {
            alert(result.error || 'Failed to create server');
        }
    } catch (err) {
        console.error(err);
        alert('Error creating server');
    }
}

async function deleteServerProfile(serverId, name) {
    if (!confirm(`Delete server profile '${name}'? This will unassign bots from this profile.`)) {
        return;
    }
    try {
        const res = await fetch('/api/servers/delete', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ serverId })
        });
        const result = await res.json();
        if (res.ok && result.success) {
            window.location.reload();
        } else {
            alert(result.error || 'Failed to delete server');
        }
    } catch (err) {
        console.error(err);
        alert('Error deleting server');
    }
}

async function assignBotServer(botId) {
    const serverSelect = document.querySelector(`.server-select[data-bot-id="${botId}"]`);
    const applyCheckbox = document.querySelector(`.apply-profile[data-bot-id="${botId}"]`);
    const serverId = serverSelect ? serverSelect.value : '';
    const applyProfile = applyCheckbox ? applyCheckbox.checked : false;

    try {
        const res = await fetch('/api/servers/assign-bot', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ botId, serverId, applyProfile })
        });
        const result = await res.json();
        if (!res.ok || !result.success) {
            alert(result.error || 'Failed to assign server');
            window.location.reload();
        }
    } catch (err) {
        console.error(err);
        alert('Error assigning server');
        window.location.reload();
    }
}

const tabButtons = document.querySelectorAll('.admin-tab');
const tabPanels = document.querySelectorAll('.admin-tab-panel');
const serversData = <%- JSON.stringify(servers || []) %>;
const editServerSelect = document.getElementById('editServerSelect');
const editServerName = document.getElementById('editServerName');
const editServerRegion = document.getElementById('editServerRegion');
const editServerIp = document.getElementById('editServerIp');
const editServerPort = document.getElementById('editServerPort');
const editServerVersion = document.getElementById('editServerVersion');
const editServerMaxBots = document.getElementById('editServerMaxBots');
const editServerNotes = document.getElementById('editServerNotes');
const editServerWhitelist = document.getElementById('editServerWhitelist');

if (editServerSelect) {
    editServerSelect.addEventListener('change', () => {
        const serverId = editServerSelect.value;
        const server = serversData.find(item => String(item._id) === String(serverId));
        if (!server) {
            editServerName.value = '';
            editServerRegion.value = '';
            editServerIp.value = '';
            editServerPort.value = '';
            editServerVersion.value = '1.20.4';
            editServerMaxBots.value = '';
            editServerNotes.value = '';
            editServerWhitelist.checked = false;
            return;
        }
        editServerName.value = server.name || '';
        editServerRegion.value = server.region || '';
        editServerIp.value = server.ip || '';
        editServerPort.value = server.port || 25565;
        editServerVersion.value = server.version || '1.20.4';
        editServerMaxBots.value = server.maxBots || 0;
        editServerNotes.value = server.notes || '';
        editServerWhitelist.checked = !!server.whitelist;
    });
}

tabButtons.forEach(button => {
    button.addEventListener('click', () => {
        const tab = button.getAttribute('data-tab');
        tabButtons.forEach(btn => {
            if (btn === button) {
                btn.classList.add('bg-slate-900', 'text-white');
                btn.classList.remove('bg-slate-100', 'dark:bg-slate-800', 'text-slate-700', 'dark:text-slate-200');
            } else {
                btn.classList.remove('bg-slate-900', 'text-white');
                btn.classList.add('bg-slate-100', 'dark:bg-slate-800', 'text-slate-700', 'dark:text-slate-200');
            }
        });
        tabPanels.forEach(panel => {
            panel.classList.toggle('hidden', panel.id !== `tab-${tab}`);
        });
    });
});
</script>

