<%- include('partials/header') %>
<%- include('partials/sidebar') %>

<main class="flex-1 p-6 md:p-8 overflow-y-auto h-screen flex flex-col gap-6">
    <header class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
        <div class="flex items-center gap-3">
            <a href="/" class="p-2 bg-slate-100 dark:bg-slate-800/50 rounded-lg text-slate-500 hover:text-slate-700 dark:hover:text-slate-300 transition-colors">
                <span class="material-icons text-sm">arrow_back</span>
            </a>
            <div>
                <h2 class="text-xl md:text-2xl font-semibold">Passkey Required</h2>
                <div class="text-sm text-slate-500 dark:text-slate-400 mt-1">
                    <span><%= botConfig.name %></span>
                    <span>â€¢</span>
                    <span><%= serverName || 'Unknown server' %></span>
                </div>
            </div>
        </div>
    </header>

    <div class="max-w-md w-full bg-white dark:bg-slate-800/60 backdrop-blur-sm rounded-xl border border-slate-200 dark:border-slate-700/50 p-5">
        <p class="text-sm text-slate-600 dark:text-slate-400 mb-4">
            Enter the passkey to open this server.
        </p>

        <% if (error) { %>
            <div class="mb-4 text-sm text-red-600 bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800/40 rounded-lg px-3 py-2">
                <%= error %>
            </div>
        <% } %>

        <form method="post" action="/bot/<%= botId %>/passkey" class="space-y-3">
            <div>
                <label class="block text-xs font-medium text-slate-500 uppercase mb-1.5">Passkey</label>
                <input type="password" name="passkey" class="w-full px-2.5 py-2 rounded-lg bg-slate-50 dark:bg-slate-900/50 border border-slate-200 dark:border-slate-700 text-sm outline-none focus:ring-1 focus:ring-slate-400" autocomplete="off" required>
            </div>
            <button type="submit" class="w-full bg-slate-800 hover:bg-slate-900 dark:bg-slate-700 dark:hover:bg-slate-600 text-white font-medium py-2 rounded-lg transition-all text-sm border border-slate-200 dark:border-slate-700 shadow-sm">
                Unlock Server
            </button>
        </form>
    </div>
</main>

<%- include('partials/footer') %>
