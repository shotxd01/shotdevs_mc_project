<%- include('partials/header') %>
<%- include('partials/sidebar') %>

<main class="flex-1 p-8 overflow-y-auto h-screen flex flex-col">
    <header class="mb-4">
        <h2 class="text-3xl font-bold">Console</h2>
    </header>

    <div class="flex-1 bg-gray-900 rounded-2xl shadow-sm border border-gray-700 flex flex-col overflow-hidden">
        <!-- Log Output -->
        <div id="console-logs" class="flex-1 p-4 overflow-y-auto font-mono text-sm space-y-1 console-logs">
            <!-- Logs will appear here -->
            <div class="text-gray-500">Connecting to console stream...</div>
        </div>

        <!-- Input -->
        <div class="p-4 bg-gray-800 border-t border-gray-700">
            <form onsubmit="sendCommand(event)" class="flex gap-4">
                <input type="text" id="command-input" class="flex-1 px-4 py-3 rounded-lg bg-gray-900 border border-gray-700 text-white focus:ring-2 focus:ring-blue-500 outline-none font-mono" placeholder="Type a command (/) or chat message..." autocomplete="off">
                <button type="submit" class="px-6 py-3 bg-blue-500 hover:bg-blue-600 text-white font-bold rounded-lg transition-all">
                    Send
                </button>
            </form>
        </div>
    </div>
</main>

<%- include('partials/footer') %>
