<%- include('partials/header') %>
<%- include('partials/sidebar') %>

<main class="flex-1 p-4 md:p-6">
    <div class="mb-6">
        <h1 class="text-2xl font-bold">User Profile</h1>
        <p class="text-slate-600 dark:text-slate-400">View your account information and settings</p>
    </div>

    <div class="bg-white dark:bg-slate-800/60 backdrop-blur-sm rounded-xl border border-slate-200 dark:border-slate-700/50 p-6 max-w-2xl">
        <div class="mb-6">
            <div class="flex items-center gap-4 mb-4">
                <div class="w-16 h-16 rounded-full bg-slate-200 dark:bg-slate-700 flex items-center justify-center">
                    <span class="material-icons text-2xl text-slate-600 dark:text-slate-400">person</span>
                </div>
                <div>
                    <h2 class="text-xl font-semibold"><%= user.username %></h2>
                    <span class="inline-block px-2 py-1 text-xs rounded-full bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-300">
                        <%= typeof user.role !== 'undefined' && user.role ? user.role.charAt(0).toUpperCase() + user.role.slice(1) : 'User' %>
                    </span>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="border border-slate-200 dark:border-slate-700/50 rounded-lg p-4">
                <h3 class="font-medium text-slate-700 dark:text-slate-300 mb-2">Account Information</h3>
                <div class="space-y-2 text-sm">
                    <div class="flex justify-between">
                        <span class="text-slate-500 dark:text-slate-400">Username:</span>
                        <span class="font-medium"><%= user.username %></span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-slate-500 dark:text-slate-400">Role:</span>
                        <span class="font-medium capitalize"><%= typeof user.role !== 'undefined' && user.role ? user.role : 'user' %></span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-slate-500 dark:text-slate-400">Member Since:</span>
                        <span class="font-medium"><%= new Date(user.createdAt).toLocaleDateString() %></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-6 pt-6 border-t border-slate-200 dark:border-slate-700/50">
            <h3 class="font-medium text-slate-700 dark:text-slate-300 mb-3">Account Permissions</h3>
            <div class="space-y-2 text-sm">
                <% if (isAdmin) { %>
                    <div class="flex items-center gap-2">
                        <span class="material-icons text-green-500 text-base">check_circle</span>
                        <span>Create and manage all bots</span>
                    </div>
                    <div class="flex items-center gap-2">
                        <span class="material-icons text-green-500 text-base">check_circle</span>
                        <span>Control all bot operations (start/stop/restart)</span>
                    </div>
                    <div class="flex items-center gap-2">
                        <span class="material-icons text-green-500 text-base">check_circle</span>
                        <span>Manage all bot settings and configurations</span>
                    </div>
                    <div class="flex items-center gap-2">
                        <span class="material-icons text-green-500 text-base">check_circle</span>
                        <span>Send commands to all bots</span>
                    </div>
                    <div class="flex items-center gap-2">
                        <span class="material-icons text-green-500 text-base">check_circle</span>
                        <span>Delete any bot</span>
                    </div>
                    <div class="flex items-center gap-2">
                        <span class="material-icons text-green-500 text-base">check_circle</span>
                        <span>Assign bots to users</span>
                    </div>
                    <div class="flex items-center gap-2">
                        <span class="material-icons text-green-500 text-base">check_circle</span>
                        <span>Promote/demote users</span>
                    </div>
                <% } else { %>
                    <% if (assignedBots && assignedBots.length > 0) { %>
                        <div class="flex items-center gap-2">
                            <span class="material-icons text-blue-500 text-base">info</span>
                            <span>You have access to <%= assignedBots.length %> assigned bot(s)</span>
                        </div>
                        <div class="flex items-center gap-2">
                            <span class="material-icons text-green-500 text-base">check_circle</span>
                            <span>Control assigned bots (start/stop/restart)</span>
                        </div>
                        <div class="flex items-center gap-2">
                            <span class="material-icons text-green-500 text-base">check_circle</span>
                            <span>Toggle AFK mode on assigned bots</span>
                        </div>
                        <div class="flex items-center gap-2">
                            <span class="material-icons text-green-500 text-base">check_circle</span>
                            <span>Send commands to assigned bots</span>
                        </div>
                        <div class="flex items-center gap-2">
                            <span class="material-icons text-green-500 text-base">check_circle</span>
                            <span>View assigned bot settings</span>
                        </div>
                        <div class="flex items-center gap-2">
                            <span class="material-icons text-yellow-500 text-base">warning</span>
                            <span>Cannot create new bots</span>
                        </div>
                        <div class="flex items-center gap-2">
                            <span class="material-icons text-yellow-500 text-base">warning</span>
                            <span>Cannot delete bots</span>
                        </div>
                        <div class="flex items-center gap-2">
                            <span class="material-icons text-gray-400 text-base">remove_circle</span>
                            <span>No access to unassigned bots</span>
                        </div>
                    <% } else { %>
                        <div class="flex items-center gap-2">
                            <span class="material-icons text-yellow-500 text-base">warning</span>
                            <span>No bots assigned to your account</span>
                        </div>
                        <div class="flex items-center gap-2">
                            <span class="material-icons text-gray-400 text-base">remove_circle</span>
                            <span>No bot management permissions</span>
                        </div>
                        <div class="flex items-center gap-2">
                            <span class="material-icons text-gray-400 text-base">remove_circle</span>
                            <span>Contact administrator for bot access</span>
                        </div>
                    <% } %>
                <% } %>
            </div>
        </div>

        <% if (!isAdmin && assignedBots && assignedBots.length > 0) { %>
        <div class="mt-6 pt-6 border-t border-slate-200 dark:border-slate-700/50">
            <h3 class="font-medium text-slate-700 dark:text-slate-300 mb-3">Assigned Bots</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
                <% assignedBots.forEach(function(bot) { %>
                <div class="bg-slate-50 dark:bg-slate-700/30 p-3 rounded-lg border border-slate-200 dark:border-slate-600/50">
                    <div class="font-medium text-sm"><%= bot.name %></div>
                    <div class="text-xs text-slate-500 dark:text-slate-400 mt-1">
                        <%= typeof bot.server !== 'undefined' ? bot.server.ip + ':' + bot.server.port : 'No server configured' %>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
        <% } %>
    </div>
</main>

<%- include('partials/footer') %>