<%- include('partials/header') %>
<%- include('partials/sidebar') %>

<main class="flex-1 flex items-center justify-center p-4 min-h-screen">
    <div class="bg-white dark:bg-slate-800/60 backdrop-blur-sm rounded-xl w-full max-w-md p-6 border border-slate-200 dark:border-slate-700/50 shadow-lg">
        <div class="text-center mb-6">
            <span class="material-icons text-slate-600 dark:text-slate-400 text-4xl">person_add</span>
            <h2 class="text-xl font-semibold mt-3">Create Account</h2>
            <p class="text-slate-500 dark:text-slate-400 text-sm">Register to manage your Minecraft AFK Bot</p>
        </div>

        <% if (error) { %>
            <div class="bg-red-50 dark:bg-red-900/10 text-red-600 dark:text-red-400 p-3 rounded-lg mb-5 text-sm flex items-center gap-2">
                <span class="material-icons text-sm">error</span>
                <%= error %>
            </div>
        <% } %>

        <form action="/register" method="POST" class="space-y-4">
            <div>
                <label class="block text-sm font-medium mb-2 text-slate-700 dark:text-slate-300">Username</label>
                <input type="text" name="username" class="w-full px-3 py-2.5 rounded-lg bg-slate-50 dark:bg-slate-900/50 border border-slate-200 dark:border-slate-700 focus:ring-1 focus:ring-slate-400 outline-none transition-all text-sm dark:text-white" placeholder="Enter username" required>
            </div>
            <div>
                <label class="block text-sm font-medium mb-2 text-slate-700 dark:text-slate-300">Password</label>
                <input type="password" name="password" class="w-full px-3 py-2.5 rounded-lg bg-slate-50 dark:bg-slate-900/50 border border-slate-200 dark:border-slate-700 focus:ring-1 focus:ring-slate-400 outline-none transition-all text-sm dark:text-white" placeholder="••••••••" required>
            </div>
            <div>
                <label class="block text-sm font-medium mb-2 text-slate-700 dark:text-slate-300">Confirm Password</label>
                <input type="password" name="confirmPassword" class="w-full px-3 py-2.5 rounded-lg bg-slate-50 dark:bg-slate-900/50 border border-slate-200 dark:border-slate-700 focus:ring-1 focus:ring-slate-400 outline-none transition-all text-sm dark:text-white" placeholder="••••••••" required>
            </div>
            <button type="submit" class="w-full bg-slate-800 hover:bg-slate-900 dark:bg-slate-700 dark:hover:bg-slate-600 text-white font-medium py-2.5 rounded-lg transition-all text-sm border border-slate-200 dark:border-slate-700 shadow-sm">
                Register
            </button>
        </form>
        
        <div class="mt-5 text-center text-sm">
            <p class="text-slate-600 dark:text-slate-400">
                Already have an account? 
                <a href="/login" class="text-slate-800 dark:text-slate-200 font-medium hover:underline">Login here</a>
            </p>
        </div>
    </div>
</main>

<%- include('partials/footer') %>